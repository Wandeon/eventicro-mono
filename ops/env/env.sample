# EventiCRO Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_URL=postgresql://postgres:your_password@127.0.0.1:5432/eventicro

# Redis Configuration
REDIS_PASSWORD=your_redis_password

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password

# Nominatim Configuration
NOMINATIM_PBF_URL=https://download.geofabrik.de/europe/croatia-latest.osm.pbf
NOMINATIM_PASSWORD=your_nominatim_password

# TileServer Configuration
TILESERVER_PUBLIC_URL=http://your-domain.com/tiles

# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
N8N_WEB_URL=http://your-domain.com/n8n

# AWS S3 Configuration (for WAL-G backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_ENDPOINT=https://s3.amazonaws.com
AWS_S3_FORCE_PATH_STYLE=false
WALG_S3_PREFIX=s3://your-bucket-name/backups/

# Application Configuration
NODE_ENV=production
PORT=3000
HOST=127.0.0.1

# API Configuration
API_BASE_URL=http://127.0.0.1:8787
API_PORT=8787

# Security
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
SESSION_SECRET=your_session_secret_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@eventicro.com

# Frontend URL (for email links)
FRONTEND_URL=https://your-domain.com

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,http://localhost:3000

# Logging
LOG_LEVEL=info

# Development/Testing
ETHEREAL_USER=test@example.com
ETHEREAL_PASS=testpass
