{
  "name": "eventicro-mono",
  "version": "1.0.0",
  "description": "EventiCRO Monorepo - Event management platform for Croatia",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:api\"",
    "dev:ui": "cd apps/ui && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "build": "npm run build:ui && npm run build:api",
    "build:ui": "cd apps/ui && npm run build",
    "build:api": "cd apps/api && npm run build",
    "test": "npm run test:ui && npm run test:api",
    "test:ui": "cd apps/ui && npm test",
    "test:api": "cd apps/api && npm test",
    "lint": "npm run lint:ui && npm run lint:api",
    "lint:ui": "cd apps/ui && npm run lint",
    "lint:api": "cd apps/api && npm run lint",
    "install:all": "npm install && cd apps/ui && npm install && cd ../api && npm install",
    "migrate": "cd apps/api && npm run migrate:dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/eventicro-mono.git"
  },
  "keywords": [
    "events",
    "croatia",
    "sveltekit",
    "express",
    "postgresql",
    "docker"
  ],
  "author": "EventiCRO Team",
  "license": "MIT"
}
