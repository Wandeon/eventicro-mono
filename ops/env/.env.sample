# EventiCRO environment configuration template
# Copy to your deployment host and replace placeholder values.

# Connection string used by the application to reach Postgres
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Password for the Postgres server used by docker-compose
POSTGRES_PASSWORD=postgres-password

# URL with embedded password for Redis access
REDIS_URL=redis://:redis-password@localhost:6379/0

# Password passed to the Redis container
REDIS_PASSWORD=redis-password

# MinIO administrative access key
MINIO_ROOT_USER=minioadmin

# MinIO administrative secret key
MINIO_ROOT_PASSWORD=minio-secret

# Public URL exposed by the tileserver (optional)
TILESERVER_PUBLIC_URL=https://tiles.example.com

# URL to the OSM PBF file for Nominatim import
NOMINATIM_PBF_URL=https://download.geofabrik.de/region-latest.osm.pbf

# Password for the Nominatim database user
NOMINATIM_PASSWORD=nominatim-password

# Access key for WAL-G S3 backups
AWS_ACCESS_KEY_ID=aws-key

# Secret key for WAL-G S3 backups
AWS_SECRET_ACCESS_KEY=aws-secret

# Region for the S3-compatible storage
AWS_REGION=us-east-1

# Endpoint for the S3-compatible storage (e.g., MinIO)
AWS_ENDPOINT=https://s3.example.com

# Whether to force path-style URLs when talking to S3
AWS_S3_FORCE_PATH_STYLE=true

# S3 prefix where WAL-G stores backups
WALG_S3_PREFIX=s3://bucket/path

# Optional Node.js version run-eventicro-ui should use
EVENTICRO_NODE_VERSION=20
